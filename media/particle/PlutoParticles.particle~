	particle_width 40
	particle_height 40
	cull_each false
	quota 100
	billboard_type point

	emitter Box
	{
		emission_rate 30
		time_to_live 1
		direction 0 0 1
		velocity 0
		colour 0 0 0 0
		width 1400
		height 1400
		depth 10
	}

	affector ColourFader2
	{
		red1 1
		green1 1
		blue1 1
		alpha1 1
		red2 -1
		green2 -1
		blue2 -1
		alpha2 -1
		state_change 0.5
	}
}

