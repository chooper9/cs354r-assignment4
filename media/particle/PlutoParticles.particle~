		angle 5
		emission_rate 100
        	time_to_live    1
		direction       0 -1 0
		velocity 0
		colour_range_start  0.4 0.5 1
		colour_range_end    0.2 0.3 1
		
	}
	affector ColourFader
	{
		red -0.05
		green -0.05
		blue -0.25
	}
	affector Scaler
   	{
		rate -100
   	}
	
}
