particle_system Pluto/Twinkle
{
	material Examples/FlarePointSprite
	particle_width 20
	particle_height 20
	cull_each false
	quota 20
	billboard_type point

	emitter Box
	{
		emission_rate 12
		time_to_live 2
		direction 0 0 1
		velocity 0
		colour 0 0 0 0
		width 1400
		height 1400
		depth 10
	}

	affector ColourFader2
	{
		red1 1
		green1 1
		blue1 1
		alpha1 1
		red2 -1
		green2 -1
		blue2 -1
		alpha2 -1
		state_change 1
	}
}

particle_system Pluto/FlameGeysers
{
	material Examples/Flare
	particle_width 25
	particle_height 25
	cull_each false
	quota 1000
	emit_emitter_quota 15
	billboard_type point

	emitter Box
	{
		name mainEmitter
		emit_emitter flame_pillar
		angle 20
		emission_rate 10
		time_to_live 3
		direction 0 1 0
		velocity 0
		width 5000
		height 5000
		depth 4
	}

	emitter Point
	{
		name flame_pillar
		angle 5
		emission_rate 100
	        time_to_live    1
        	direction       0 1 0
		duration 3
		repeat_delay_min 1
		repeat_delay_max 3
        	velocity_min    250
        	velocity_max    300
        	colour_range_start  1 1 0.5
        	colour_range_end    1 0.8 0.3
		
	}
	affector ColourFader
	{
		red -0.25
		green -1
		blue -1
	}
}

